{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"types": ["unplugin-icons/types/react", "@react-router/node", "vite/client"],
		"jsx": "react-jsx",

		"paths": {
			"@components/*": ["./src/components/*"],
			"@contexts/*": ["./src/contexts/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@lib/*": ["./src/lib/*"],
			"@/*": ["./src/*"]
		},
		"rootDirs": [".", "./.react-router/types"]
	},
	"include": ["src", ".react-router/types/**/*"]
}
