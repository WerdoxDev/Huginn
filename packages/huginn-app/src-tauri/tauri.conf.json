{
	"build": {
		"beforeBuildCommand": "bun run build",
		"beforeDevCommand": "bun run dev",
		"frontendDist": "../build/client",
		"devUrl": "http://localhost:5173"
	},
	"bundle": {
		"active": true,
		"category": "DeveloperTool",
		"copyright": "",
		"targets": "nsis",
		"externalBin": [],
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": "",
			"allowDowngrades": true,
         "nsis":{"installerIcon": "icons/icon.ico"}
		},
		"longDescription": "",
		"shortDescription": "A norse themed chat application",
		"resources": [
         "resources/**/*"
      ],
		"createUpdaterArtifacts": true
	},
	"productName": "Huginn",
	"identifier": "dev.huginn.desktop",
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZBQzhCNUZDMEVFMDlCMkYKUldRdm0rQU8vTFhJK3JnS1NCRzIzUS9NM21tbHdBYlo1UzkyNDZYNTd6OEE1TFJpNkd4ekdVKzAK",
			"endpoints": ["https://midgard.huginn.dev/api/check-update/{{target}}/{{current_version}}", "https://asgard.huginn.dev/api/check-update/{{target}}/{{current_version}}"],
			"windows": {
				"installMode": "quiet"
			}
		},
      "deep-link":{
         "desktop":{
            "schemes": ["huginn"]
         }
      },
      "cli":{
         "description":"Huginn App CLI",
         "args": [
            {
               "short":"s",
               "name":"silent",
               "description":"Launches the app by just showing it in the system tray without showing the window"
            }
         ]
      }
	},
	"app": {
		"windows": [
			{
				"title": "Huginn",
				"width": 1200,
				"height": 670,
				"minWidth": 1200,
				"minHeight": 670,
				"fullscreen": false,
				"resizable": true,
				"visible": true,
				"label": "main",
				"decorations": false,
				"transparent": false,
            "windowEffects":{"effects": [], "color":[38,38,38,1]}
			}
		],
		"security": {
			"csp": null,
         "assetProtocol": {
            "enable": true,
            "scope": ["**/*"]
         }
		}
	}
}
